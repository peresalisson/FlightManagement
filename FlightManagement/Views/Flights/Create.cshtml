@model FlightManagement.ViewModels.FlightCreateViewModel

@{
    ViewData["Title"] = "Create Flight";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Create New Flight</h1>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FlightNumber" class="form-label"></label>
                            <input asp-for="FlightNumber" class="form-control" placeholder="e.g., AA100" />
                            <span asp-validation-for="FlightNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartureAirportId" class="form-label"></label>
                                <select asp-for="DepartureAirportId" asp-items="Model.DepartureAirports" class="form-select">
                                    <option value="">-- Select Airport --</option>
                                </select>
                                <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DestinationAirportId" class="form-label"></label>
                                <select asp-for="DestinationAirportId" asp-items="Model.DestinationAirports" class="form-select">
                                    <option value="">-- Select Airport --</option>
                                </select>
                                <span asp-validation-for="DestinationAirportId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartureDate" class="form-label"></label>
                            <input asp-for="DepartureDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DepartureDate" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FuelConsumptionPerKm" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="FuelConsumptionPerKm" class="form-control" step="0.01" />
                                    <span class="input-group-text">L/km</span>
                                </div>
                                <span asp-validation-for="FuelConsumptionPerKm" class="text-danger"></span>
                                <small class="form-text text-muted">Fuel consumption during cruise</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TakeoffFuel" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="TakeoffFuel" class="form-control" step="0.01" />
                                    <span class="input-group-text">L</span>
                                </div>
                                <span asp-validation-for="TakeoffFuel" class="text-danger"></span>
                                <small class="form-text text-muted">Additional fuel for takeoff</small>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> Distance and fuel requirements will be calculated automatically based on the selected airports.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Flight
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}