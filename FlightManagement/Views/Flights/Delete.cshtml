@model FlightManagement.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-danger mb-4">
                <i class="bi bi-exclamation-triangle"></i> Delete Flight
            </h1>

            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this flight?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">@Model.FlightNumber</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Flight Number:</dt>
                        <dd class="col-sm-8">@Model.FlightNumber</dd>

                        <dt class="col-sm-4">Route:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.DepartureAirport.IataCode</span>
                            @Model.DepartureAirport.Name
                            <i class="bi bi-arrow-right mx-2"></i>
                            <span class="badge bg-success">@Model.DestinationAirport.IataCode</span>
                            @Model.DestinationAirport.Name
                        </dd>

                        <dt class="col-sm-4">Departure:</dt>
                        <dd class="col-sm-8">@Model.DepartureDate.ToString("MMMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Distance:</dt>
                        <dd class="col-sm-8">
                            @if (Model.CalculatedDistance.HasValue)
                            {
                                @Model.CalculatedDistance.Value.ToString("N2") <text>km</text>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Required Fuel:</dt>
                        <dd class="col-sm-8">
                            @if (Model.RequiredFuel.HasValue)
                            {
                                @Model.RequiredFuel.Value.ToString("N2") <text>L</text>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>