@model IEnumerable<FlightManagement.Models.Flight>

@{
    ViewData["Title"] = "Flights";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Flight Management</h1>
        <div>
            <a asp-action="Report" class="btn btn-info me-2">
                <i class="bi bi-graph-up"></i> View Report
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Flight
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>No flights found</h4>
            <p>Get started by creating your first flight.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Flight Number</th>
                        <th>Route</th>
                        <th>Departure</th>
                        <th>Distance (km)</th>
                        <th>Required Fuel (L)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td><strong>@flight.FlightNumber</strong></td>
                            <td>
                                <span class="badge bg-primary">@flight.DepartureAirport.IataCode</span>
                                <i class="bi bi-arrow-right"></i>
                                <span class="badge bg-success">@flight.DestinationAirport.IataCode</span>
                                <br />
                                <small class="text-muted">
                                    @flight.DepartureAirport.City → @flight.DestinationAirport.City
                                </small>
                            </td>
                            <td>@flight.DepartureDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                @if (flight.CalculatedDistance.HasValue)
                                {
                                    <span>@flight.CalculatedDistance.Value.ToString("N2")</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (flight.RequiredFuel.HasValue)
                                {
                                    <span class="badge bg-warning text-dark">@flight.RequiredFuel.Value.ToString("N2") L</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@flight.Id" class="btn btn-outline-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@flight.Id" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}