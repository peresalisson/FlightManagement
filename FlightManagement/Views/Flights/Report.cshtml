@model FlightManagement.ViewModels.FlightReportViewModel

@{
    ViewData["Title"] = "Flight Report";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-graph-up"></i> Flight Operations Report</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Flights
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Flights</h5>
                    <h2 class="mb-0">@Model.Summary.TotalFlights</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Total Distance</h5>
                    <h2 class="mb-0">@Model.Summary.TotalDistance.ToString("N0") <small>km</small></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Total Fuel</h5>
                    <h2 class="mb-0">@Model.Summary.TotalFuelRequired.ToString("N0") <small>L</small></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Avg Distance</h5>
                    <h2 class="mb-0">@Model.Summary.AverageDistance.ToString("N0") <small>km</small></h2>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Flights.Any())
    {
        <div class="alert alert-info">
            <h4>No flight data available</h4>
            <p>Create some flights to see the report.</p>
        </div>
    }
    else
    {
        <!-- Detailed Flight Table -->
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Detailed Flight Information</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Flight #</th>
                                <th>Route</th>
                                <th>Departure</th>
                                <th class="text-end">Distance (km)</th>
                                <th class="text-end">Fuel/km (L)</th>
                                <th class="text-end">Takeoff Fuel (L)</th>
                                <th class="text-end">Total Fuel (L)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var flight in Model.Flights)
                            {
                                <tr>
                                    <td><strong>@flight.FlightNumber</strong></td>
                                    <td>
                                        @flight.DepartureAirport
                                        <i class="bi bi-arrow-right"></i>
                                        @flight.DestinationAirport
                                    </td>
                                    <td>@flight.DepartureDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td class="text-end">
                                        @if (flight.CalculatedDistance.HasValue)
                                        {
                                            <strong>@flight.CalculatedDistance.Value.ToString("N2")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-end">@flight.FuelConsumptionPerKm.ToString("N2")</td>
                                    <td class="text-end">@flight.TakeoffFuel.ToString("N2")</td>
                                    <td class="text-end">
                                        @if (flight.RequiredFuel.HasValue)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                @flight.RequiredFuel.Value.ToString("N2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary">
                            <tr>
                                <th colspan="3">Totals / Averages</th>
                                <th class="text-end">@Model.Summary.TotalDistance.ToString("N2")</th>
                                <th class="text-end">-</th>
                                <th class="text-end">-</th>
                                <th class="text-end">@Model.Summary.TotalFuelRequired.ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Additional Statistics -->
        <div class="card mt-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Average Distance per Flight:</strong> @Model.Summary.AverageDistance.ToString("N2") km</p>
                        <p><strong>Average Fuel per Flight:</strong> @Model.Summary.AverageFuelPerFlight.ToString("N2") L</p>
                    </div>
                    <div class="col-md-6">
                        @if (Model.Summary.TotalDistance > 0)
                        {
                            var avgFuelPerKm = Model.Summary.TotalFuelRequired / Model.Summary.TotalDistance;
                            <p><strong>Overall Fuel Efficiency:</strong> @avgFuelPerKm.ToString("N2") L/km</p>
                        }
                        <p><strong>Report Generated:</strong> @DateTime.Now.ToString("MMMM dd, yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Print Button -->
        <div class="text-center mt-4 mb-4">
            <button onclick="window.print()" class="btn btn-lg btn-outline-primary">
                <i class="bi bi-printer"></i> Print Report
            </button>
        </div>
    }
</div>

@section Styles {
    <style>
        @@media print {
            .btn, nav, .card-header {
                display: none !important;
            }

            .card {
                border: 1px solid #000;
            }
        }
    </style>
}